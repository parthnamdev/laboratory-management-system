<%- include("partials/header"); -%> 

   <div class="custom-padding">
    <h1>Edit Test</h1>
    <div class="row">
        <form action="/test/updateTest" method="post" class="col-md-6 col-12 mb-5">
          
             <div class="mb-3 col-lg-6 col-md-12 col-12">
              <label for="test" class="form-label">Name</label>
              <input type="text" class="form-control" id="test" name="test" value="<%= test_details.test %>">
            </div>
            <div id="entryList" class="col-md-12 col-12">
             <% for(let i =0; i<test_details.entries.length; i++){ %>
               <div id="<%= i %>" class="row">
              <h5>Entry <%= i + 1 %> <button type="button" class="fas fa-minus card-link custom-icon-small" name="<%= i %>" onclick="removeEntry(this.name)"></button></h5> 
              
              
            
              <div class="mb-3 col-lg-6 col-md-12 col-12">
                <label for="test" class="form-label">Name</label>
                <input type="text" class="form-control " id="name" name="name" value="<%= test_details.entries[i].name %>">
              </div>
              <div class="mb-3 col-lg-6 col-md-12 col-12">
               <label for="test" class="form-label">Range</label>
               <input type="text" class="form-control" id="range" name="range" value="<%= test_details.entries[i].range %>">
             </div>
              </div>
             <% } %>
             <input type="hidden" value="<%= test_details._id %>" name="tid">
             <input type="hidden" value="<%= test_details.entries.length %>" id="count">
            </div>
            <div class="col-md-12 col-12">
            <button type="button" class="fas fa-plus card-link custom-icon-small" onclick="addEntry()"></button>
            </div>
            <button type="submit" class="btn btn-dark">Update Test</button>
        </form>
        <img src="images/edit.svg" alt="" class="col-md-4 col-12 ms-auto mb-auto">
      </div>
        <div class="my-5"></div>
   </div>

</body>
<script>
  const removeEntry = (num) => {
    var toRemove = document.getElementById(`${num}`);
    toRemove.remove();
  }
  var count = parseInt(document.getElementById('count').value);
  const addEntry = () => {
    var node = document.createElement("div");

    document.getElementById("entryList").appendChild(node);

    node.innerHTML = '<h5>New Entry <button type="button" class="fas fa-minus card-link custom-icon-small" onclick="removeEntry('+ count +')"></button></h5> <div class="mb-3 col-lg-6 col-md-12 col-12"><label for="test" class="form-label">Name</label><input type="text" class="form-control " id="name" name="name" value=""></div><div class="mb-3 col-lg-6 col-md-12 col-12"><label for="test" class="form-label">Range</label><input type="text" class="form-control" id="range" name="range" value=""></div>';
    node.setAttribute("id", count);
    node.setAttribute("class", "row");
    count = count + 1;

  }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</html>