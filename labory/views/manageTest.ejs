<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- fontawesome -->
    <link rel="stylesheet" href="fontawesome-free/css/all.css">

    <!-- custom stylesheet -->
    <link rel="stylesheet" href="styles.css">

    <title>Labory</title>
</head>
<body>
    
    <div class="custom-padding">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">LABORY</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto justify-content-end">
                  <li class="nav-item">
                    <a class="nav-link" href="/addPatient">Add Patient</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/createReport">Create Report</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/manageTest">Manage Tests</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/sendReport">Send Report</a>
                  </li>

                </ul>
              </div>
            </div>
        </nav>
    </div>

    <div class="custom-padding">
      <h1>manage test</h1>
      <div class="row">
        <% tests.forEach(element => { %>
          <div class="col-lg-3 col-md-4 cart-item">
            <div class="card mx-auto">
              <div class="card-body text-left">
                <form action="/test/delete" method="POST">
                  <input type="hidden" name="test" value="<%= element.test %>" id="">
                  <h5><%= element.test %></h5>
                  <% element.entries.forEach(entry => { %>
                  <p class="card-text"><%= entry.name %></p>
                  <% }); %>
                  <button type="submit" class="fas fa-minus card-link cart-minus addresses-icon"></button>
                </form>
                <form action="/test/update" method="post">
                <input type="hidden" name="test" value="<%= element.test %>" id="">
                <button type="submit" class="fas fa-pen card-link cart-minus addresses-icon"></button>
              </form>
              </div>
            </div>
          </div>
        <% }); %>
        <div class="col-lg-3 col-md-4 cart-item">
          <div class="card mx-auto">
            <div class="card-body text-left">
              <form action="/test/add" method="post">
                <h5>New test</h5>
              <input type="number" class="card-text new-address" name="no_of_entries" min="1" max="100" required>
              <button type="submit" class="fas fa-plus card-link cart-minus addresses-icon"></button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>