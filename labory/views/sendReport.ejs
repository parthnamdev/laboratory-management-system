<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- fontawesome -->
    <link rel="stylesheet" href="fontawesome-free/css/all.css">

    <!-- custom stylesheet -->
    <link rel="stylesheet" href="styles.css">

    <title>Labory</title>
</head>
<body>
    
    <div class="custom-padding">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container-fluid">
              <a class="navbar-brand" href="/">LABORY</a>
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto justify-content-end">
                  <li class="nav-item">
                    <a class="nav-link" href="/addPatient">Add Patient</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/createReport">Create Report</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/manageTest">Manage Tests</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="/sendReport">Send Report</a>
                  </li>

                </ul>
              </div>
            </div>
        </nav>
    </div>

    <div class="custom-padding">
      <% if(reports.length>0){ %>
        <h1>Reports</h1>
        <% reports.forEach(element => { %>
          <div class="col-lg-4 col-md-6 col-12">
            <a href="/viewReport/<%= element.uuid %>" class="">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title"><%= element.patient %></h5>
                  
                  <% if(element.tests.length>0){ %>
                  <h6 class="card-subtitle mb-2 text-muted">Tests</h6>
                  <% element.tests.forEach(test => { %>
                  <p class="card-text"><%= test.name %></p>
                  
                  <% }); %>
                  <% } %>
                </div>
              </div>
            </a>
          </div>
        <% }); %>
        <% } else {%>
          <h1>No reports found</h1>
        <% } %>
        
    </div>
</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>