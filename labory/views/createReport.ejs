<%- include("partials/header"); -%> 

    <div class="custom-padding row">
      <%if(patients.length>0){%>
        <h1>Create Report</h1>
        <% patients.forEach(element => { %>
          <div class="col-lg-4 col-md-6 col-12">
            <a href="/editReport/<%= element.uuid %>" class="">
              <div class="card my-3 custom-card">
                <div class="card-body">
                  <h5 class="card-title" ><%= element.patient.name %></h5>
                  <div class="card-scroll-overflow">
                  <%if(element.tests.length>0){%>
                  <h6 class="card-subtitle my-2 text-muted">Tests</h6>
                  <% element.tests.forEach(test => { %>
                  <p class="card-text"><%= test %></p>
                  <% }); %>
                  <% } %>
                </div>
                </div>
              </div>
            </a>
          </div>
        <% }); %>
        <% } else {%>
          <h1>No data found</h1>
          <img src="images/empty.svg" class="col-lg-4 col-md-6 col-12 my-5" alt="">
        <% } %>
        
    </div>
    

</body>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</html>